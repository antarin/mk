<h1 class="text-center">Új Cikk</h1>
{{# if hasErrors}}
  <div class="alert alert-danger">
    {{# each messages }}
      <p>{{ this.msg }}</p>
    {{/each}}
  </div>
{{/if}}
<form class="" action="/blog/add" method="post">
  <div class="form-group">
    <label for="title">A cikk címe:</label>
    <input type="title" class="form-control" name="title">
  </div>
  <div class="form-group">
    <label for="author">Szerző:</label>
    <input type="author" class="form-control" name="author">
  </div>
  <div class="form-group">
    <label for="body">Tartalom:</label>
    <textarea class="form-control" rows="15" id="summernote" name="body"></textarea>
  </div>
  <div class="checkbox">
    <label for="type"><input type="checkbox" name="type"> Új Hír</label>
    <p>Nem is</p>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
